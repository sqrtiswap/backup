#!/bin/sh

if command -v doas > /dev/null ; then
	_doas=doas
else
	_doas=sudo
fi

echo "Start collecting privileged configurations:"
_privdir="${_dotdir}"/PRIVILEGED

mkdir -p "${_privdir}"/etc/X11/xenodm/ \
	&& echo "----> [1/4] ${_privdir} created." \
	|| exit 1

"${_doas}" cp \
	/etc/freshclam.conf \
	/etc/fstab \
	"${_privdir}"/etc/ \
	&& echo "----> [2/4] General /etc/ collected." \
	|| exit 1

if [ "$(uname -s)" = "OpenBSD" ] ; then
	"${_doas}" cp \
		/etc/doas.conf \
		/etc/login.conf \
		/etc/man.conf \
		/etc/mixerctl.conf \
		/etc/ntpd.conf \
		/etc/sndioctl.conf \
		/etc/sysclean.ignore \
		/etc/wpa_supplicant.conf \
		/etc/wsconsctl.conf \
		"${_privdir}"/etc/ \
		&& echo "--------> [1/2] OpenBSD specific /etc/ collected." \
		|| exit 1

	"${_doas}" cp \
		/etc/X11/xenodm/Xresources* \
		/etc/X11/xenodm/Xsetup_0 \
		/etc/X11/xenodm/GiveConsole \
		"${_privdir}"/etc/X11/xenodm/ \
		&& echo "--------> [2/2] /etc/X11/xenodm/ collected." \
		|| exit 1

	echo "----> [2/3] OpenBSD specific privileged configs collected."
elif [ "$(awk -F "(\"| )" 'NR == 1 { print $2 }' /etc/os-release)" = "Fedora" ] ; then
	"${_doas}" cp \
		/etc/man_db.conf \
		"${_privdir}"/etc/ \
		&& echo "----> [2/3] Fedora specific /etc/ collected." \
		|| exit 1
else
	echo "OS is unknown. Aborting..." && exit 1
fi

"${_doas}" chown -R "$USER:$USER" "${_privdir}" \
	&& echo "----> [3/3] changed ownership of privileged configs." \
	|| exit 1